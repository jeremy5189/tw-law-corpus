        {
            "note": "",
            "rule_no": "第十六條",
            "content": "　　交通部設觀光局；其組織以法律定之。",
            "relates": {}
        },
        {
            "note": "",
            "rule_no": "第十七條",
            "content": "　　交通部設航政局；其組織以法律定之。",
            "relates": {}
        },
        {
            "note": "",
            "rule_no": "第十八條",
            "content": "　　交通部設運輸研究所；其組織以法律定之。",
            "relates": {
                "被引用條文": [
                    {
                        "law_no": "02013",
                        "law_name": "交通部運輸研究所組織條例",
